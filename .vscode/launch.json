{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS App",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/main.ts"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "autoAttachChildProcesses": true,
      "outputCapture": "std", // Captura os logs de console e erros
      "console": "integratedTerminal" // Usa o terminal integrado para logs
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "protocol": "inspector"
    }
  ]
}
